<resources>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/minePrimary</item>
            <item name="colorPrimaryDark">@color/minePrimaryDark</item>
            <item name="colorAccent">@color/mineAccent</item>
            <item name="android:navigationBarColor">@color/minePrimary</item>
